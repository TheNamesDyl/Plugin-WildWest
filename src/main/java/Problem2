package me.dylan.unit4;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.util.Scanner;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.SwingConstants;

public class Problem2 {
	 public static void topwindow(){
		   JFrame frame = new JFrame("Simple");
	       frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); 
	 
	       JLabel textLabel = new JLabel("I'm a label",SwingConstants.CENTER); 
	       textLabel.setPreferredSize(new Dimension(1000, 500)); 
	       frame.getContentPane().add(textLabel, BorderLayout.CENTER); 
	  
	       frame.setLocationRelativeTo(null); 
	       frame.pack();
	       frame.setVisible(true); 

		 
	 }
     public static void main (String[] args){
    	 topwindow();
    	 Scanner scan = new Scanner(System.in);
    	 System.out.println("What do you want to find the area of?\n Triangle, Circle or Rectangle?");
    	 String read = scan.nextLine();
    	 
    	 if(read.equalsIgnoreCase("circle")){
    		 System.out.println("Circle it is, what is the radius of the circle?");
    		 int circleread = scan.nextInt();
    		 int areacircle = (int) 3.14*(circleread*circleread);
    		 System.out.println("The area of your circle is " + areacircle + " units");
    	 }else if (read.equalsIgnoreCase("Triangle")){
    		 System.out.println("Triangle it is, what is the base of the triangle?");
    		 int base = scan.nextInt();
    		 System.out.println("What is the height of the triangle?");
    		 int height = scan.nextInt();
    		 int areatriangle = (int) .5*(base*height);
    		 System.out.println("The area of your triangle is " + areatriangle + " units");
    		 
    	 }else if (read.equalsIgnoreCase("Rectangle")){
    		 System.out.println("Rectangle it is, what is the base of the rectangle?");
    		 int base = scan.nextInt();
    		 System.out.println("What is the height of the rectangle?");
    		 int height = scan.nextInt();
    		 int arearect = (int) (base*height);
    		 System.out.println("The area of your rectangle is " + arearect + " units");
    		 
    	 }
     }
}
